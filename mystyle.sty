\newcommand{\partialto}[1][]{%
  \begin{tikzpicture}[#1]
    \coordinate (x) at (0,0ex);
    \node[circle,draw=black, fill=white, inner sep=0pt,minimum size=5pt] (y) at (1em,0ex) {};
    \coordinate (z) at (2em,0ex);
    \draw (x) -- (y);
    \draw[->] (y) -- (z);
  \end{tikzpicture}%
}

